<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingDemo.MVVMDemo">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="{Binding FullName}"
                VerticalOptions="CenterAndExpand" 
             TextColor="Black"
                HorizontalOptions="Center" />

      <Entry Text="{Binding FirstName}" Placeholder="First Name" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Center"/>
      <Entry Text="{Binding SecondName}" Placeholder="Second Name" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Center"/>

      <Button Command="{Binding AppendNames}" Text ="Append Names" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Center"/>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>